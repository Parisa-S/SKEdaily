<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:padding="10dp"

    android:background="#FFF"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_newsfeed"
        android:layout_width="150px"
        android:layout_height="150px"
        />

    <TextView
        android:id="@+id/name_newsfeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_newsfeed"
        android:layout_marginTop="10px"
        android:text="name"
        />

    <TextView
        android:id="@+id/time_newsfeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_newsfeed"
        android:layout_toRightOf="@id/img_newsfeed"
        android:layout_marginTop="10px"
        android:text="time"
        />

    <TextView
        android:id="@+id/msg_newsfeed"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_newsfeed"
        android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
        />
</RelativeLayout>